@page
@model programCc.Pages.LoginPageModel
@{
    ViewData["Title"] = "Login";
}

<!--Intestazione-->
<div class="container" id="intestazione">
    <div class="row justify-content-center">
        <!--Colonna sinistra-->
        <div class="col-3">
            <h1><img src="~/logo.jpg" width="150" height="150"></h1><br>
        </div>
        <!--Colonna centrale-->
        <div class="col-6">
            <h1>Accedi a MyBank</h1><br>
            <nav class="navbar navbar-expand-lg navbar-light bg-light" id="navbar">
                <div class="collapse navbar-collapse" id="navbarSupportedContent" style="text-align: center">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item active">
                            <a class="nav-link" href="/LoginPage">MyHome<span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                MyConto
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" href="/Movimenti">Movimenti</a>
                                <a class="dropdown-item" href="/Bilancio">Bilancio</a>
                                <a class="dropdown-item" href="/IBAN">IBAN</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                MyPagamenti
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" href="/Bollettino">Bollettino</a>
                                <a class="dropdown-item" href="/Bonifico">Bonifico</a>
                                <a class="dropdown-item" href="/Ricarica">Ricarica</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                MyProfilo
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" href="/Carta">Carta</a>
                                <a class="dropdown-item" href="/Documenti">Documenti</a>
                                <a class="dropdown-item" href="/Contattaci">Contattaci</a>
                            </div>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
        <!--Colonna destra-->
        <div class="col-3">
            <form asp-page="/LoginPage" asp-page-handler="login" class="form-signin" method="post">
                <div class="form-group">
                    <label for="exampleInputEmail1">Indirizzo email</label>
                    <input type="email" class="form-control"  name="email" id="Inemail" aria-describedby="emailHelp" placeholder="Enter email">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <input type="password" class="form-control" name="passwd" id="Inpasswd" placeholder="Password">
                </div>
                <button type="submit" class="btn btn-primary">Accedi @Model.Login()</button>
            </form>
        </div>
    </div>
</div>

<!--Centrale-->
<div class="container" id="centrale">
    <div class="row justify-content-center">
        <!--Colonna sinistra-->
        <div class="col-3">

        </div>
        <!--Colonna centrale-->
        <div class="col-6">
            <h1 class="logged">Stato: @Model.logged</h1>
        </div>
        <!--Colonna destra-->
        <div class="col-3">

        </div>
    </div>
</div>

<script type="text/javascript">
    var email = document.getElementById("Inemail").value;
    var passwd = document.getElementById("Inpasswd").value;
}       
</script>