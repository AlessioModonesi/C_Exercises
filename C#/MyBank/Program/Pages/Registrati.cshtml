@page
@model MyBank.Pages.RegistratiModel
@{
    ViewData["Title"] = "Registrati";
}

<div class="container" id="intestazione">
    <div class="row justify-content-center">
        <div class="col-6">
            <h1>Registrati</h1><br>
            <form>
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Email/Nome Utente</label>
                    <input type="email" class="form-control" id="email" aria-describedby="emailHelp">
                </div>
                <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">Password</label>
                    <input type="password" class="form-control" id="password">
                </div>
                <button type="submit" class="btn btn-outline-dark">Registrati</button><br><br>
            </form>
        </div>
    </div>
</div>


