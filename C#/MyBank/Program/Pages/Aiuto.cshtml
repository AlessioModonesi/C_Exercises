@page
@model MyBank.Pages.Shared.AiutoModel
@{
    ViewData["Title"] = "Aiuto";
}

<div class="container" id="intestazione">
    <div class="row justify-content-center">
        <div class="col-3">

        </div>
        <div class="col-6">
            <br><h3>@ViewData["Title"]</h3><br>
        </div>
        <div class="col-3">

        </div>
    </div>
</div>

<div class="container" id="centrale">
    <div class="row justify-content-center">
        <div class="col-6">
            <form asp-page="/Aiuto" asp-page-handler="aiuto" class="form-signin" method="post">
                <div class="form-group">
                    <label for="InputEmail">Indirizzo email</label>
                    @{
                        if (Startup.adminSetup == false)
                        {
                            <input type="email" class="form-control" name="email" id="Inputemail" aria-describedby="emailHelp"
                            placeholder="Enter Email">
                        }
                        else
                        {
                            <input type="email" class="form-control" name="email" id="Inputemail" aria-describedby="emailHelp"
                            placeholder="@Program.readerEmail[0]" disabled>
                        }
                    }
                </div>
                <div class="form-group">
                    <label for="textArea">Descrivi il tuo problema</label>
                    <textarea class="form-control" id="textArea" rows="3"></textarea>
                </div>
                <button type="submit" class="btn btn-primary" onclick="">Invia</button><br>
            </form>
        </div>
    </div>
</div>

<script type="text/javascript">
