@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<!--Intestazione-->
<div class="container" id="intestazione">
    <div class="row justify-content-center">

        <!--Colonna sinistra-->
        <div class="col-3">
            <h1><img src="~/logo.jpg" width="150" height="150"></h1><br>
        </div>

        <!--Colonna centrale-->
        <div class="col-6">
            <h1>MyBank: la banca del futuro</h1>
        </div>

        <!--Colonna destra-->
        <div class="col-3">

        </div>

    </div>
</div>

<!--Carosello-->
<div class="container">
    <div class="row justify-content-center">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/.jpg" class="d-block w-100" alt="car1">
                </div>
                <div class="carousel-item">
                    <img src="~/.jpg" class="d-block w-100" alt="car2">
                </div>
                <div class="carousel-item">
                    <img src="~/.jpg" class="d-block w-100" alt="car3">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>




