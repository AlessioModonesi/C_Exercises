@page
@model MyBank.Pages.MovimentiModel
@{
    ViewData["Title"] = "Movimenti";
}

<div class="container" id="intestazione">
    <div class="row justify-content-center">
        <div class="col-6">
            <br><h3>@ViewData["Title"]</h3><br>
            @{
                <p>Entrate recenti</p>
                for (int i = 0; i < Program.nEntrate; i++)
                {
                    <div class="alert alert-success" role="alert">
                        Hai ricevuto 10 euro da pippo
                    </div>
                }

                <p>Uscite recenti</p>
                for (int j = 0; j < Program.nUscite; j++)
                {
                    <div class="alert alert-danger" role="alert">
                        Hai inviato 10 euro a pippo
                    </div>
                }
            }
        </div>
    </div>
</div>