@page
@model programCc.Pages.IscrizionePageModel
@{
    ViewData["Title"] = "Registrati";
}

<!--Intestazione-->
<div class="container" id="intestazione">
    <div class="row justify-content-center">

        <!--Colonna sinistra-->
        <div class="col-3">
            <h1><img src="~/logo.jpg" width="150" height="150"></h1><br>
        </div>

        <!--Colonna centrale-->
        <div class="col-6">
            <h1>Registrati a MyBank</h1><br>
            <form>
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Email/Nome Utente</label>
                    <input type="email" class="form-control" id="email" aria-describedby="emailHelp">
                </div>
                <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">Password</label>
                    <input type="password" class="form-control" id="password">
                </div>
                <button type="submit" class="btn btn-outline-dark">Registrati</button><br><br>
            </form>
        </div>

        <!--Colonna destra-->
        <div class="col-3">

        </div>

    </div>
</div>

<!--Centrale-->
<div class="container" id="centrale">
    <div class="row justify-content-center">

        <!--Colonna sinistra-->
        <div class="col-3">

        </div>

        <!--Colonna centrale-->
        <div class="col-6">

        </div>

        <!--Colonna destra-->
        <div class="col-3">

        </div>

    </div>
</div>


