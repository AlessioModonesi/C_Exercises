@page
@model MyBank.Pages.LoginModel
@{
    if (Startup.adminSetup == false)
        ViewData["Title"] = "Login";
    else
        ViewData["Title"] = "Esci";
}

<div class="container" id="intestazione">
    <div class="row justify-content-center">
        <div class="col-6">
            @{
                if (Startup.adminSetup == false)
                {
                    <br><h3>@ViewData["Title"]</h3><br>
                    <form asp-page="/Login" asp-page-handler="login" class="form-signin" method="post">
                        <div class="form-group">
                            <label for="InputEmail">Indirizzo email</label>
                            <input type="text" class="form-control" name="email" id="Inputemail" aria-describedby="emailHelp" placeholder="Enter Email">
                        </div>
                        <div class="form-group">
                            <label for="InputPassword">Password</label>
                            <input type="password" class="form-control" name="passwd" id="Inputpasswd" placeholder="Enter Password">
                        </div>
                        <button type="submit" class="btn btn-primary" onclick="Adv()">Entra</button><br>
                    </form>
                }
                else
                {
                    <br><h3>@ViewData["Title"]</h3><br>
                    <form asp-page="/Login" asp-page-handler="exit" class="form-signin" method="post">
                        <div class="form-group">
                            <label for="InputEmail">Indirizzo email</label>
                            <input type="text" readonly class="form-control" name="email" id="Inputemail" aria-describedby="emailHelp" value="@Program.readerEmail[Program.pnt]">
                        </div>
                        <div class="form-group">
                            <label for="InputPassword">Password</label>
                            <input type="password" readonly class="form-control" name="passwd" id="Inputpasswd" value="@Program.readerPass[Program.pnt]">
                        </div>
                        <button type="submit" class="btn btn-primary">Esci</button><br>
                    </form>
                }
            }
        </div>
    </div>
</div>

<script type="text/javascript">
    var email = document.getElementById("InputEmail").value;
    var passwd = document.getElementById("InputPasswd").value;
</script>

<script>
    function Adv()
    {
        switch (@Program.error)
        {
            case "email":
                alert("Indirizzo email errato");
                break;
            case "passwd":
                alert("Password errata");
                break;
            case "exist":
                alert("Utente già registrato");
                break;
            default:
                break;
        }
    }
</script>


